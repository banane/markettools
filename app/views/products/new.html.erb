<h1>New product</h1>

<%  # create array of button options
    # refer to button by the index of the current version "session[:sess_idx]"
    # pass selected values through to database using hidden fields
 button_array = ['buyme.png', 'purchase.png'] 
 this_button = button_array[session[:sess_idx].to_i ].to_s
%>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :button_version, :value=>button_array[session[:sess_idx].to_i ].to_s %>
  <%= f.hidden_field :app_version, :value=>session[:sess_version] %>

  <p>
    <%= f.label :productname %><br />
    <%= f.text_field :productname %>
  </p>
  <p>
    <%= f.label :productdesc %><br />
    <%= f.text_area :productdesc %>
  </p>
  <p>


 <%= image_submit_tag this_button %>   
  </p>
<% end %>



<%= link_to 'Back', products_path %>
<hr>
